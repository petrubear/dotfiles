# Theme
# config-file = themes/van-helsing
config-file = themes/pro

# Font (use what you have installed)
font-family = "Monolisa Nerd Font"
font-feature = +calt
font-feature = +liga
font-feature = +dlig
font-style = Medium
font-style-bold = Bold
font-style-italic = Medium Italic
font-style-bold-italic = Bold Italic
font-size = 16

# Performance
font-thicken = true
mouse-hide-while-typing = true

# macOS-specific
macos-titlebar-style = hidden
macos-option-as-alt = false
maximize = true
window-padding-x = 10
window-padding-y = 10
window-save-state = never

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Keybinds - standard macOS
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+shift+left_bracket=previous_tab
keybind = super+shift+right_bracket=next_tab
keybind = super+n=new_window
keybind = super+comma=goto_split:top
keybind = shift+enter=text:\x1b\r

# Clipboard
# clipboard-read = allow
# clipboard-write = allow
copy-on-select = false

# Cursor
cursor-style = block
cursor-style-blink = true

# Confirm before closing with multiple tabs
confirm-close-surface = false
quit-after-last-window-closed = true
