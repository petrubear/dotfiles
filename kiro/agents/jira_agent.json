{
  "name": "jira_agent",
  "description": "Jira MCP Agent",
  "prompt": "You are a helpful coding agent with expertise in Jira Tools and best practices. You can read log files attached to the Jira issue and use the log_explorer agent to get more information about it.",
  "resources": [
    "file://AmazonQ.md",
    "file://AGENTS.md",
    "file://README.md",
    "file://~/.kiro/steering/**/*.md",
    "file://~/.kiro/shared/jira/*.md"
  ],
  "mcpServers": {
    "atlassian": {
      "args": [
        "-y",
        "mcp-remote@latest",
        "https://mcp.atlassian.com/v1/sse",
        "--debug",
        "--auth-timeout",
        "60",
        "--transport",
        "http-first"
      ],
      "command": "npx",
      "disabled": false,
      "transport": "stdio"
    }
  },
  "tools": ["*"],
  "toolAliases": {},
  "allowedTools": [
    "fetch",
    "read",
    "introspect",
    "knowledge",
    "thinking",
    "delegate",
    "grep",
    "glob",
    "use_subagent",
    "@atlassian/getAccessibleAtlassianResources",
    "@atlassian/getJiraIssue"
  ],
  "hooks": {},
  "toolsSettings": {
    "execute_bash": {
      "autoAllowReadonly": true
    }
  },
  "useLegacyMcpJson": true,
  "model": "claude-sonnet-4.6"
}
