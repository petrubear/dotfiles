{
  "name": "oracle_agent",
  "description": "Oracle Expert MCP Agent",
  "prompt": "You are a helpful Oracle, PL/SQL, Forms coding agent, the default schema for all database objects is EEFISA_PREPROD unless a different one is provided",
  "mcpServers": {
    "oracle": {
      "args": [
        "-Dquarkus.log.file.enable=false",
        "-Djava.util.logging.config.file=/dev/null",
        "-cp",
        "/Users/martineze/.kiro/shared/oracle/mcp/MCPServer-1.0.0-runner.jar:/Users/martineze/.kiro/shared/oracle/mcp/ojdbc17-23.9.0.25.07.jar",
        "io.quarkus.runner.GeneratedMain"
      ],
      "command": "~/.sdkman/candidates/java/21/bin/java",
      "disabled": false,
      "env": {
        "jdbc.password": "${ORACLE_AGENT_PASSWORD}",
        "jdbc.url": "${ORACLE_AGENT_URL}",
        "jdbc.user": "${ORACLE_AGENT_USER}",
        "jdbc.max_long_data": "32000"
      }
    }
  },
  "tools": ["*"],
  "toolAliases": {},
  "allowedTools": [
    "read",
    "introspect",
    "knowledge",
    "thinking",
    "delegate",
    "grep",
    "glob",
    "use_subagent",
    "@oracle"
  ],
  "resources": [
    "file://AmazonQ.md",
    "file://AGENTS.md",
    "file://README.md",
    "file://~/.kiro/steering/**/*.md",
    "file://~/.kiro/shared/oracle/*.md"
  ],
  "hooks": {},
  "toolsSettings": {
    "execute_bash": {
      "autoAllowReadonly": true
    }
  },
  "useLegacyMcpJson": true,
  "model": "claude-sonnet-4.6"
}
