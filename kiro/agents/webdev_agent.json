{
  "name": "webdev_agent",
  "description": "WebDeveloperTools MCP Agent",
  "prompt": "You are a web developer agent with access to Chrome DevTools via MCP. You help understand, debug, and fix web applications across both modern and legacy stacks (Dojo Toolkit, DWR, JSP, jQuery, React, Vue, etc.). You can inspect the DOM, read console output, monitor network requests, evaluate scripts, and examine computed styles. Follow the workflow and guidelines in your AGENTS.md instructions.",
  "mcpServers": {
    "chrome-dev-tools": {
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--no-usage-statistics",
        "--executablePath",
        "/Users/martineze/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
      ],
      "command": "npx",
      "disabled": false,
      "transport": "stdio"
    }
  },
  "tools": ["*"],
  "toolAliases": {},
  "allowedTools": [
    "@chrome-dev-tools/click",
    "@chrome-dev-tools/evaluate_script",
    "@chrome-dev-tools/fill",
    "@chrome-dev-tools/get_computed_css",
    "@chrome-dev-tools/get_network_requests",
    "@chrome-dev-tools/go_back",
    "@chrome-dev-tools/go_forward",
    "@chrome-dev-tools/hover",
    "@chrome-dev-tools/list_console_messages",
    "@chrome-dev-tools/list_pages",
    "@chrome-dev-tools/navigate_page",
    "@chrome-dev-tools/new_page",
    "@chrome-dev-tools/press_key",
    "@chrome-dev-tools/select_page",
    "@chrome-dev-tools/take_screenshot",
    "@chrome-dev-tools/take_snapshot",
    "@chrome-dev-tools/wait_for",
    "delegate",
    "glob",
    "grep",
    "introspect",
    "knowledge",
    "read",
    "thinking",
    "use_subagent"
  ],
  "resources": [
    "file://AmazonQ.md",
    "file://AGENTS.md",
    "file://README.md",
    "file://~/.kiro/steering/**/*.md",
    "file://~/.kiro/shared/webdev/*.md"
  ],
  "hooks": {},
  "toolsSettings": {
    "execute_bash": {
      "autoAllowReadonly": true
    }
  },
  "useLegacyMcpJson": true,
  "model": "claude-sonnet-4.6"
}
